{
  "manifest_version": 2,
  "name": "YouTube Arabic Transcript Extractor",
  "version": "1.0",
  "description": "Extract Arabic transcripts from YouTube videos",
  "permissions": [
    "activeTab",
    "https://www.youtube.com/*"
  ],
  "browser_action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/*"],
      "js": ["content.js"]
    }
  ]
}